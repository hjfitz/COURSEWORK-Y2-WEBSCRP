</div>

<div id='black-overlay' class='black-overlay hide'></div>
<!-- please be temporary -->
<div id='black-overlay-time' class='black-overlay hide'></div>


  <div id='weather-settings' class='col s12 m6 setting-card'>
    <div class=card id='map-card'>
      <div class=card-content>
        <div id="map"></div>
        <p>Your location is: <span id='location'>foo</span></p>
        <p> <a href="#" id='save' class='waves-effect waves-light btn'>Save</a></p>
      </div>
    </div>
  </div>

  <div id='time-settings' class='col s12 m6 hide setting-card'>
    <div class=card id='time-setting-card'>
      <div class=card-content>
        <span class='card-title'>Set the time</span>
        <div class='row'>
          <form action="#">
            <p>
              <input type="checkbox" id="24h" />
              <label for="24h">24h Clock</label>
            </p>
            <p>
              <input type="checkbox" id="seconds" />
              <label for="seconds">Seconds</label>
            </p>
          </form>
        </div>

        <div class='row'>
          <div class="switch">
            <label>
              <span id='day'>Day</span>
              <input type="checkbox">
              <span class="lever" id='date-lever'></span>
              <span id='date'>date</span>
            </label>
          </div>
          <div class="switch">
            <label>
              <span id='month'>Month</span>
              <input type="checkbox">
              <span class="lever" id='month-lever'></span>
              <span id='month-num'>Month number</span>
            </label>
          </div>
          <div class="switch">
            <label>
              <span id='year-short'>Year short</span>
              <input type="checkbox">
              <span class="lever" id='year-lever'></span>
              <span id='year'>Year</span>
            </label>
          </div>

        </div>

        <div class='row'>
          <p id='time-preview'>00:00</p>
          <p id='date-preview'>01-01-1970</p>
          <a id='set-time' class='waved-effect waves-light btn' href=# >Set</a>
        </div>
      </div>
    </div>
  </div>

<div class="fixed-action-btn toolbar">
  <a class="btn-floating btn-large purple">
