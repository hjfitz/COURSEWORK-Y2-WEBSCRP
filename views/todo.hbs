<div id="todo-add-form" class="row hidden">
  <div class="card">
    <div class="card-content">
      <span class=card-title>Add A Todo</span>
      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
              <input id="todo-title" type="text" class="materialize-textarea validate">
              <label for="todo-title">Title</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
               <textarea id="todo-desc" class="materialize-textarea validate"></textarea>
               <label for="textarea1">Description</label>
            </div>
          </div>
       </form>
     </div>
     <div class=row>
       <a id="todo-add-button" class="waves-effect waves-light btn">Add Todo</a>
     </div>
   </div>
 </div>
</div>
<div class="row">
  <div class="card">
    <div class="card-content">
      <span class="card-title">Your Todos</span>
      <div class=row>
        <ul class="collapsible not-dark" data-collapsible="accordion">
          <!--add conditional for crossed out or now -->
          {{#each todos}}
          <ul data-rowinfo='{ "rowid":"{{rowid}}", "title":"{{title}}", "desc":"{{desc}}" }' class="dropdown-content options-dropdown">
            <li><a href="#!">Edit</a></li>
            <li><a href="#!">Delete</a></li>
          </ul>
          <li>
            <div class="collapsible-header">
              {{title}}
            </div>
            <div class="collapsible-body">
              <p class="todo-desc">{{desc}}<a class="options-button dropdown-button" href=#>&#8942;</a></p>
            </div>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="row">
        <a id="todo-form-show" class="waves-effect waves-light btn">Add Todo</a>
      </div>
    </div>
  </div>
</div>
<div id="page-shadow" class=hidden>
  <!--do something with me-->
</div>


<div id=edit-input class="row hidden">
  <div id=button-container>
    <!-- <a id=edit-close-button class="btn-floating waves-effect waves-light red"><i class="material-icons">clear</i></a> -->
  </div>
  <div class="col s12 m12">
    <div class=card>
      <div class=card-content>
        <span id=todo-edit class=card-title>Edit A Todo</span>
        <div class=row>
        <form class="col s12">
          <div class=row>
            <div class="input-field col s6">
              <input id="title" placeholder="" type="text" class="validate">
              <label for="title">Title</label>
            </div>
            <div class="input-field col s6">
              <input id="desc" placeholder="" type="text" class="validate">
              <label for="desc">Description</label>
            </div>
          </div>
        </form>
      </div>
      <button id=edit-button class="btn green waves-effect waves-light right" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
      </div>
    </div>
  </div>
</div>

<script type=text/javascript src=javascripts/todo/main.js></script>
<link rel=stylesheet href="stylesheets/todo.css">
